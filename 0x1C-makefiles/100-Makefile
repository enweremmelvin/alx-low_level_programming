# make file for task -: 3. make -f 3-Makefile

SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all : $(OBJ) $(SRC)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

.PHONY: clean
clean :
	$(RM) -f *~ $(NAME)

.PHONY: oclean
oclean :
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean :	clean oclean

.PHONY: re
re :	oclean all
